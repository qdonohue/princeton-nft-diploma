datasource db {
    provider = "postgresql"
    url      = env("DB_URI")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id      Int      @id @default(autoincrement())
    netId   String   @unique
    nft     Nft?
    session Session?
}

model Nft {
    id          Int    @id @default(autoincrement())
    name        String
    description String
    image       String
    address     String
    wallet      String
    User        User   @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId      Int    @unique
}

model Session {
    id     Int    @id @default(autoincrement())
    User   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId Int    @unique
    key    String
}
